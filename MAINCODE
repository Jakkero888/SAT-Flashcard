<body>
  <h1>SAT-Flashcard</h1>
  <p>This is a word bank of SAT vocabulary words and you can learn it through a flashcard.</p>
  <div class="flashcard" id="flashcard">Word</div>
  <div class="controls">
    <button id="knownBtn">Mark as Known</button>
    <button id="nextBtn">Next</button>
  </div>
<script>
  const flashcard = document.getElementById('flashcard');
  const knownBtn = document.getElementById('knownBtn');
  const nextBtn = document.getElementById('nextBtn');

  let cards = [
    { word: 'Abate', definition: 'To lessen or reduce in degree or intensity.' },
    { word: 'Benevolent', definition: 'Well meaning and kindly.' },
    { word: 'Cacophony', definition: 'A harsh, discordant mixture of sounds.' }
    // Add all SAT words here...
  ];

  let currentIndex = 0;
  let showDefinition = false;
  let knownCards = new Set();

  function updateCard() {
    const currentCard = cards[currentIndex];
    flashcard.textContent = showDefinition ? currentCard.definition : currentCard.word;
  }

  flashcard.addEventListener('click', () => {
    showDefinition = !showDefinition;
    updateCard();
  });

  knownBtn.addEventListener('click', () => {
    knownCards.add(currentIndex);
    nextCard();
  });

  nextBtn.addEventListener('click', () => {
    nextCard();
  });

  function nextCard() {
    let found = false;
    for (let i = 1; i <= cards.length; i++) {
      const nextIndex = (currentIndex + i) % cards.length;
      if (!knownCards.has(nextIndex)) {
        currentIndex = nextIndex;
        found = true;
        break;
      }
    }
    showDefinition = false;
    if (!found) {
      flashcard.textContent = 'All cards known!';
    } else {
      updateCard();
    }
  }

  updateCard();
</script>
</body>
</html>
